# =============================================================================
# ENHANCED SUPERTREND TRADING BOT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# =============================================================================
# API CREDENTIALS (REQUIRED)
# =============================================================================
# Get these from https://kite.zerodha.com/connect/apps
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_REDIRECT_URI=http://localhost:3000

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Account balance - will be overridden by CLI preferences
ACCOUNT_BALANCE=10000.0

# Capital allocation (percentage of account balance to use)
CAPITAL_ALLOCATION_PERCENT=100.0

# Maximum number of simultaneous positions
MAX_POSITIONS=1

# Risk management
RISK_PER_TRADE=0.02          # 2% risk per trade
MAX_DAILY_LOSS=0.05          # 5% maximum daily loss
MAX_DRAWDOWN=0.15            # 15% maximum drawdown
FIXED_STOP_LOSS=100.0        # Fixed stop loss in rupees

# Position sizing method: fixed, risk_based, volatility_adjusted, kelly_criterion
POSITION_SIZING_METHOD=risk_based

# =============================================================================
# STRATEGY CONFIGURATION
# =============================================================================
# SuperTrend parameters
ATR_PERIOD=10
FACTOR=3.0
MIN_CANDLES=50

# Advanced strategy features
ADAPTIVE_MODE=true
MULTI_TIMEFRAME=false
VOLUME_CONFIRMATION=false
MOMENTUM_FILTER=false
CONFIDENCE_THRESHOLD=0.6

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Stop loss method: fixed, atr_based, percentage
STOP_LOSS_METHOD=atr_based

# Trailing stop configuration
TRAILING_STOP=false
TRAILING_STOP_DISTANCE=2.0   # ATR multiplier for trailing stop

# Advanced risk controls
MAX_CORRELATION_EXPOSURE=0.5  # Maximum exposure to correlated positions
VOLATILITY_ADJUSTMENT=true
EMERGENCY_STOP=true

# Circuit breaker (emergency stop on large losses)
CIRCUIT_BREAKER_LOSS=0.1     # 10% loss triggers circuit breaker

# =============================================================================
# SAFETY CONFIGURATION
# =============================================================================
# Trading modes (IMPORTANT: Set these carefully)
LIVE_TRADING_ENABLED=false   # Set to true ONLY for live trading
DRY_RUN_MODE=true           # Set to false for live trading

# Paper trading
PAPER_TRADING_BALANCE=10000.0

# Order limits
MAX_ORDERS_PER_DAY=50

# Logging and alerts
ENABLE_CONSOLE_ALERTS=true
ENABLE_TRADE_LOGGING=true

# =============================================================================
# MARKET HOURS
# =============================================================================
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=15
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=30
PRE_CLOSE_EXIT_MINUTES=10    # Exit positions N minutes before close

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO

# Performance tracking
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_SLIPPAGE_TRACKING=true
ENABLE_EXECUTION_QUALITY_TRACKING=true

# =============================================================================
# ERROR HANDLING & RETRY CONFIGURATION
# =============================================================================
# Network retry settings
MAX_CONNECTION_RETRIES=3
CONNECTION_RETRY_DELAY=2.0
BACKOFF_MULTIPLIER=2.0

# Order retry settings
MAX_ORDER_RETRIES=3
ORDER_RETRY_DELAY=1.0

# API rate limiting
MIN_ORDER_INTERVAL=1.0       # Minimum seconds between orders
API_RATE_LIMIT=true

# =============================================================================
# DATA QUALITY & VALIDATION
# =============================================================================
# Historical data settings
HISTORICAL_DAYS=3
DATA_QUALITY_CHECKS=true
VALIDATE_OHLC_DATA=true

# Price validation
MIN_PRICE_THRESHOLD=1.0
MAX_PRICE_CHANGE_PERCENT=20